// üîë Navigation (hjkl-style panels)
[
  {
    "key": "ctrl-h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl-j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl-k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl-l",
    "command": "workbench.action.navigateRight"
  },
  // üìÅ Explorer (Neovim-like)
  {
    "key": "space e",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // üíæ Files
  {
    "key": "space f s",
    "command": "workbench.action.files.save",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  {
    "key": "space f f",
    "command": "workbench.action.quickOpen",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // üìÑ Buffers (tabs)
  {
    "key": "space b d",
    "command": "workbench.action.closeActiveEditor",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  {
    "key": "tab",
    "command": "workbench.action.nextEditor",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  {
    "key": "shift+tab",
    "command": "workbench.action.previousEditor",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // üß† LSP / Code (matches Neovim exactly)
  {
    "key": "space c a",
    "command": "editor.action.codeAction",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  {
    "key": "space c r",
    "command": "editor.action.rename",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  {
    "key": "space c s",
    "command": "workbench.action.gotoSymbol",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // üß≠ Go-to (LSP navigation)
  {
    "key": "space g d",
    "command": "editor.action.revealDefinition",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  {
    "key": "space g r",
    "command": "editor.action.goToReferences",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  {
    "key": "space g i",
    "command": "editor.action.goToImplementation",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // üîç Search
  {
    "key": "space s g",
    "command": "workbench.action.findInFiles",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // üå± Git
  {
    "key": "space g g",
    "command": "workbench.view.scm",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // üêû Debug
  {
    "key": "space d b",
    "command": "editor.debug.action.toggleBreakpoint",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  {
    "key": "space d c",
    "command": "workbench.action.debug.continue",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // ‚ö° Command palette (critical)
  {
    "key": "space space",
    "command": "workbench.action.showCommands",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // terminal
  {
    "key": "alt+j",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.terminal.focusNext"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.terminal.focusPrevious"
  },
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.new"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.terminal.kill",
  },
  // üö® Problems panel (Diagnostics) 
  {
    "key": "space m",
    "command": "workbench.actions.view.problems",
    "when": "vim.mode == 'Normal' && editorTextFocus" 
  },
  // üìÅ Explorer file operations (Vim-like)
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+a",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "ctrl+shift+m",
    "command": "-workbench.actions.view.problems",
    "when": "workbench.panel.markers.view.active"
  },
  // shortcut that should work like normal 
  {
    "key": "shift+alt+f",
    "command": "editor.action.formatDocument",
  },
  {
    "key": "ctrl+c",
    "command": "editor.action.clipboardCopyWithSyntaxHighlightingAction",
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.closeActiveEditor",
  },
  {
    "key": "ctrl+right",
    "command": "editor.action.inlineSuggest.acceptNextWord",
    "when": "cursorBeforeGhostText && inlineSuggestionVisible && textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+x",
    "command": "editor.action.clipboardCutAction",
  },
]
