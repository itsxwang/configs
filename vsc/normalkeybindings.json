// ğŸ”‘ Navigation (hjkl-style panels)
[
  {
    "command": "workbench.action.navigateLeft",
    "key": "ctrl-h"
  },
  {
    "command": "workbench.action.navigateDown",
    "key": "ctrl-j"
  },
  {
    "command": "workbench.action.navigateUp",
    "key": "ctrl-k",
  },
  {
    "command": "workbench.action.navigateRight",
    "key": "ctrl-l"
  },
  // ğŸ“ Explorer (Neovim-like)
  {
    "command": "workbench.action.toggleSidebarVisibility",
    "key": "alt+b"
  },
  // ğŸ’¾ Files
  {
    "command": "workbench.action.files.save",
    "key": "space f s",
    "when": "neovim.mode == 'normal' && editorTextFocus && !terminalFocus && !filesExplorerFocus && !inQuickOpen"
  },
  {
    "key": "space f shift+q",
    "command": "vscode-neovim.send",
    "args": [
      ":q!\n"
    ],
    "when": "neovim.mode == 'normal' && !terminalFocus && !filesExplorerFocus && !inQuickOpen"
  },
  // ğŸ“„ Buffers (tabs)
  {
    "command": "workbench.action.nextEditorInGroup",
    "key": "tab",
    "when": "neovim.mode == 'normal' && editorTextFocus && !terminalFocus && !filesExplorerFocus && !inQuickOpen"
  },
  {
    "command": "workbench.action.previousEditorInGroup",
    "key": "shift+tab",
    "when": "neovim.mode == 'normal' && editorTextFocus && !terminalFocus && !filesExplorerFocus && !inQuickOpen"
  },
  // ğŸ§  LSP / Code (matches Neovim exactly)
  {
    "command": "editor.action.codeAction",
    "key": "space c a",
    "when": "neovim.mode == 'normal' && editorTextFocus && !terminalFocus && !filesExplorerFocus && !inQuickOpen"
  },
  {
    "command": "editor.action.rename",
    "key": "space c r",
    "when": "neovim.mode == 'normal' && editorTextFocus && !terminalFocus && !filesExplorerFocus && !inQuickOpen"
  },
  {
    "command": "workbench.action.gotoSymbol",
    "key": "space c s",
    "when": "neovim.mode == 'normal' && editorTextFocus && !terminalFocus && !filesExplorerFocus && !inQuickOpen"
  },
  // ğŸ§­ Go-to (LSP navigation)
